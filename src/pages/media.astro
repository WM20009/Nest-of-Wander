---
export const prerender = true
 
import DefaultPageLayout from '$/layouts/default.astro'
import MediaPreviewList from '$/components/MediaPreviewList.astro'
// 直接导入本地 JSON 文件
import mediaData from '$/data/astro-media.json'
 
let title = 'Videos & Screencasts';
let description = "All the great videos I'm interested in!"
 
// 使用本地数据，按日期排序
const sortedPosts = mediaData.sort((a, b) => new Date(b.date) - new Date(a.date))
---
<DefaultPageLayout content={{ title, description }}>
    <MediaPreviewList posts={sortedPosts} />
</DefaultPageLayout>
